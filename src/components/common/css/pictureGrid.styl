@import '../../../asset/css/_setting.styl'

ul.pictureGrid
    display grid
    grid-gap 8px
    grid-template-columns repeat(auto-fit, minmax(234px, 1fr))
    list-style none

    li
        background rgba(#fff, .3)
        padding 8px 8px 4px
        text-align center

        // display: flex;
        div
            display inline-block
            width 100%
            // display: flex;
            // flex-direction: column;
            // justify-content: space-between;

        img
            width 100%

    @media (--sp2: )
        grid-template-columns repeat(2, 1fr)

    @media (--sp: )
        grid-gap 4px

    .caption
        display block
        font-size .9rem
        line-height 1.6
        text-align left

        .date
            display inline-block
            font-size .8rem
            margin-left 4px
            opacity .6