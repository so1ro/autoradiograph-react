@import '../../../asset/css/*'

ul.exhibition
    display grid
    grid-template-columns 18vw 1fr
    list-style none
    margin 0 auto
    max-width 960px

    li
        align-items center
        background rgba(baseBgColor02, .6)
        border-left 1px solid baseBgColor01
        display grid
        // line-height rfs(36px)
        min-height rfs(36px)

    li:nth-of-type(4n)
        border-left 1px solid baseBgColor02

    li:nth-of-type(4n-1), li:nth-of-type(4n)
        background baseBgColor01

    li.date
        padding 0 16px

    li.place
        padding 0 24px

    li.place.jp
        font-family YakuHanMP, '游明朝', YuMincho, 'Hiragino Mincho ProN', 'Hiragino Mincho Pro', 'HG明朝E', 'ＭＳ 明朝', serif

    @media (--sp3: )
        grid-template-columns 1fr

        li.place
            padding 10px 16px

        li:nth-of-type(4n-1), li:nth-of-type(4n)
            background baseBgColor02

        li:nth-of-type(2n)
            background baseBgColor01